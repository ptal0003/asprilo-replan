% INITIAL SETUP ================================================================

% - Initial State --------------------------------------------------------------

holds(O, V, 0) :- init(O, V).


% - Plan Length ----------------------------------------------------------------

horizon(H) :- H = #max{ 0; T : occurs( _, _, T) }.
time(1..H) :-  horizon(H).


% - General Law of Interia -----------------------------------------------------

holds(O, V, T) :- holds(O, V, T-1), not ab(O, V, T), time(T).
